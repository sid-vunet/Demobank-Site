<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>UCO Bank Finacle Simulator</display-name>
    <description>Finacle Core Banking System Simulator with JSP</description>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>fininfra/ui/SSOLogin.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Main SSO Servlet -->
    <servlet>
        <servlet-name>SSOServlet</servlet-name>
        <servlet-class>com.ucobank.finacle.servlet.SSOServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SSOServlet</servlet-name>
        <url-pattern>/SSOServlet</url-pattern>
    </servlet-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ucobank.finacle.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Menu Servlet -->
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>com.ucobank.finacle.servlet.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <!-- Function Servlet -->
    <servlet>
        <servlet-name>FunctionServlet</servlet-name>
        <servlet-class>com.ucobank.finacle.servlet.FunctionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FunctionServlet</servlet-name>
        <url-pattern>/function</url-pattern>
    </servlet-mapping>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.ucobank.finacle.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/fininfra/ui/home.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/menu</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/function</url-pattern>
    </filter-mapping>

    <!-- IE Compatibility Filter -->
    <filter>
        <filter-name>IECompatibilityFilter</filter-name>
        <filter-class>com.ucobank.finacle.filter.IECompatibilityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IECompatibilityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Context Parameters -->
    <context-param>
        <param-name>pageDomain</param-name>
        <param-value>ucobanknet.in</param-value>
    </context-param>
    <context-param>
        <param-name>finacleVersion</param-name>
        <param-value>10.2.25</param-value>
    </context-param>

</web-app>
